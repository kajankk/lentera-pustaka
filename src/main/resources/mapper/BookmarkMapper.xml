<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.naskah.demo.mapper.BookmarkMapper">

    <select id="findBookmarkById" resultType="com.naskah.demo.model.entity.Bookmark">
        SELECT * FROM bookmarks WHERE id = #{id}
    </select>

    <select id="findByUserBookAndPage" resultType="com.naskah.demo.model.entity.Bookmark">
        SELECT
        id, user_id, book_id, page, position, title,
        description, color, created_at
        FROM bookmarks
        WHERE user_id = #{userId}
        AND book_id = #{bookId}
        <if test="page != null">
            AND page = #{page}
        </if>
        ORDER BY created_at DESC
    </select>

</mapper>
